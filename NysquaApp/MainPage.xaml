<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NysquaApp"
             x:Class="NysquaApp.MainPage"
             Title="NysquacaoIntro">
    
    <Grid RowSpacing="0" BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            
        </Grid.RowDefinitions>
                
        <Image x:Name="Img1" Grid.Row="0"  Grid.Column="0" Source="Choco.jpg"/>
        <Image x:Name="Logo" Grid.Row="1" Grid.Column="0" Source="Nysqua.PNG" />

        <Label Text="NYSQUACAO APP" Grid.Row="2" Grid.Column="0"
               TextColor= "Black" 
               HorizontalOptions="Center"
               FontAttributes="Italic"
               />

        <Label x:Name="reserv" Grid.Row="3" Grid.Column="0"
               Text="Todos los derechos reservados" 
               TextColor= "Black" 
               HorizontalOptions="Center"
               FontAttributes="Italic"
              />

    </Grid>
   
   
</ContentPage>
